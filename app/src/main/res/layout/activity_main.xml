<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textColor="#FFF"
        android:background="@color/colorBgDark"
        android:gravity="end|bottom"
        android:padding="20dp"
        android:textSize="40sp"
        app:layout_constraintHeight_percent="0.3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="test"/>

    <ImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_access_time_black_40dp"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:contentDescription="history">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_interface"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_numbers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBgMedium"
            app:layout_constraintWidth_percent="0.75">

            <Button
                style="@style/button"
                android:id="@+id/button7"
                android:text="7"
                android:tag="7"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button8"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button8"
                android:text="8"
                android:tag="8"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button9"
                app:layout_constraintStart_toEndOf="@+id/button7"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button9"
                android:text="9"
                android:tag="9"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button8"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button4"
                android:text="4"
                android:tag="4"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button7"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button5"
                android:text="5"
                android:tag="5"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button6"
                app:layout_constraintStart_toEndOf="@+id/button4"
                app:layout_constraintTop_toBottomOf="@+id/button8"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button6"
                android:text="6"
                android:tag="6"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/button5"
                app:layout_constraintTop_toBottomOf="@+id/button9"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button1"
                android:text="1"
                android:tag="1"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintTop_toBottomOf="@+id/button4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button2"
                android:text="2"
                android:tag="2"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button3"
                app:layout_constraintStart_toEndOf="@+id/button1"
                app:layout_constraintTop_toBottomOf="@+id/button5"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button3"
                android:text="3"
                android:tag="3"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf=" @+id/button6"
                app:layout_constraintHorizontal_bias="0.5" />


            <Button
                style="@style/button"
                android:id="@+id/buttonComma"
                android:text=","
                android:tag=","
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/button0"
                app:layout_constraintTop_toBottomOf="@+id/button1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/button0"
                android:text="0"
                android:tag="0"
                android:onClick="inputClick"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintEnd_toStartOf="@+id/buttonSuppr"
                app:layout_constraintStart_toEndOf="@+id/buttonComma"
                app:layout_constraintTop_toBottomOf="@+id/button2"
                app:layout_constraintHorizontal_bias="0.5" />

            <Button
                style="@style/button"
                android:id="@+id/buttonSuppr"
                android:text="sup"
                android:onClick="delete"
                app:layout_constraintHeight_percent="0.25"
                app:layout_constraintStart_toEndOf="@id/button0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf=" @+id/button3"
                app:layout_constraintHorizontal_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_operators"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/colorBgLight"
            app:layout_constraintWidth_percent="0.25"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                style="@style/button"
                android:id="@+id/buttonDivide"
                android:text="/"
                android:tag="/"
                android:onClick="operatorClick"
                android:layout_width="match_parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/buttonMultiply" />

            <Button
                style="@style/button"
                android:id="@+id/buttonMultiply"
                android:text="x"
                android:tag="*"
                android:onClick="operatorClick"
                android:layout_width="match_parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@+id/buttonDivide"
                app:layout_constraintBottom_toTopOf="@+id/buttonMinus"/>

            <Button
                style="@style/button"
                android:id="@+id/buttonMinus"
                android:text="-"
                android:tag="-"
                android:onClick="operatorClick"
                android:layout_width="match_parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@+id/buttonMultiply"
                app:layout_constraintBottom_toTopOf="@+id/buttonPlus"/>

            <Button
                style="@style/button"
                android:id="@+id/buttonPlus"
                android:text="+"
                android:tag="+"
                android:onClick="operatorClick"
                android:layout_width="match_parent"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@+id/buttonMinus"
                app:layout_constraintBottom_toTopOf="@+id/buttonEqual"/>

            <Button
                style="@style/button"
                android:id="@+id/buttonEqual"
                android:text="="
                android:tag="="
                android:onClick="calculate"
                android:layout_width="match_parent"
                android:background="@color/colorBgExtraLight"
                app:layout_constraintHeight_percent="0.2"
                app:layout_constraintTop_toBottomOf="@+id/buttonPlus"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>